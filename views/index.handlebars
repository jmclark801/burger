<img src="/assets/images/burger.png" class="image--center">
<h1 class="text--center text">Eat Da Burger</h1>
<div class="burgers-wrapper">
  <div class="burgers-to-eat">
    {{> burgers-to-eat }}
  </div>
  <div class="burgers-eaten">
    {{> burgers-eaten }}
  </div>
  <div class="all-burgers">
    <ul>
      {{#each burgers}}
      <li>{{ burger_name }}</li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="flex-center">
  <form id="addBurger">
    <labe for="burgerName">Enter a Burger You'd Like to Try:</labe>
    <input id="burgerName" type="text" placeholder="Enter the burger name here">
    <button class="button">Submit</button>
  </form>

</div>